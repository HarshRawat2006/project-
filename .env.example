# Project ZORA Configuration Template
# Copy this file to .env and customize as needed

# =============================================================================
# WAKE WORD CONFIGURATION
# =============================================================================
# The word that activates the voice assistant (default: "zora")
WAKE_WORD=zora

# =============================================================================
# AI MODELS CONFIGURATION
# =============================================================================
# Emotion detection model (HuggingFace model name)
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# Sentiment analysis model (HuggingFace model name)  
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# =============================================================================
# SPOTIFY INTEGRATION (OPTIONAL)
# =============================================================================
# Get these from: https://developer.spotify.com/dashboard/applications
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# Optional: Specific device ID for playback control
SPOTIFY_DEVICE_ID=

# Optional: Pre-generated OAuth token (advanced users)
SPOTIFY_OAUTH_TOKEN=

# =============================================================================
# OPENAI INTEGRATION (OPTIONAL - FUTURE FEATURE)
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# WEBHOOK INTEGRATIONS (OPTIONAL)
# =============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Custom automation webhook URL
CUSTOM_AUTOMATION_WEBHOOK=https://your-automation-service.com/webhook

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable/disable conversation logging (true/false)
ENABLE_CONVERSATION_LOG=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Speech recognition timeout (seconds)
WAKE_WORD_TIMEOUT=5
COMMAND_TIMEOUT=10

# TTS preferences (online/offline/auto)
TTS_MODE=auto

# Language detection confidence threshold (0.0-1.0)
LANGUAGE_CONFIDENCE_THRESHOLD=0.8