# Project ZORA Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# MODEL CONFIGURATIONS
# ===========================================

# Emotion detection model (HuggingFace)
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base

# Sentiment analysis model (HuggingFace)
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# Whisper model for speech recognition
WHISPER_MODEL=small

# ===========================================
# API KEYS (Optional)
# ===========================================

# OpenAI API key for advanced language processing
OPENAI_API_KEY=your_openai_api_key_here

# Slack webhook URL for team notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Custom automation webhook (Zapier, IFTTT, etc.)
CUSTOM_AUTOMATION_WEBHOOK=https://your-webhook-url.com/endpoint

# ===========================================
# SPOTIFY INTEGRATION (Optional)
# ===========================================

# Spotify Developer App credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# Spotify OAuth token (get from Spotify Web API)
SPOTIFY_OAUTH_TOKEN=your_spotify_oauth_token

# Spotify device ID (optional, for specific device control)
SPOTIFY_DEVICE_ID=your_spotify_device_id

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=project_zora.log

# ===========================================
# AUDIO CONFIGURATION
# ===========================================

# Audio sample rate (Hz)
AUDIO_SAMPLE_RATE=16000

# Audio chunk size
AUDIO_CHUNK_SIZE=1024

# Speech recognition timeout (seconds)
SPEECH_TIMEOUT=5

# ===========================================
# LANGUAGE CONFIGURATION
# ===========================================

# Default language code
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,hi,es,fr,de,it,pt,ru,ja,ko,zh

# ===========================================
# ADVANCED SETTINGS
# ===========================================

# Enable/disable specific features
ENABLE_WHISPER=true
ENABLE_TRANSFORMERS=true
ENABLE_SPOTIFY=true
ENABLE_SLACK=true

# Custom model paths (if using local models)
CUSTOM_EMOTION_MODEL_PATH=
CUSTOM_SENTIMENT_MODEL_PATH=
CUSTOM_WHISPER_MODEL_PATH=

# ===========================================
# NOTES
# ===========================================

# 1. Get OpenAI API key from: https://platform.openai.com/api-keys
# 2. Get Spotify credentials from: https://developer.spotify.com/dashboard
# 3. Get Slack webhook from: https://api.slack.com/messaging/webhooks
# 4. All API keys are optional - the system will work without them
# 5. Models will be downloaded automatically on first run